<div class="container">
  <% if user_signed_in? %>
    <!-- Notifications  -->
    <% if flash[:error] %>
      <div class="alert alert-success" id="test">
        <%=flash[:notice]%>
      </div>
    <% elsif notice %> 
       <div class="alert alert-success" id="test">
        <%= notice%>
      </div>
    <% end %>
    <!-- Notifications  -->
    <div id="notification"></div>
    <h2>Listing vehicles</h2>
    <% if current_user.admin? %>
      <%= link_to 'New Vehicle', new_vehicle_path %> 
    <% else %>    
      <%= link_to 'Add Vehicles', more_vehicles_path(current_user)%>
    <% end %>
    <%= link_to 'Back', root_path, :class => "pull-right" %><br/><br/>
      
      <!-- Table -->
    <div class="panel panel-default well well-lg">
      <%= render 'vehicles_list' %>
    </div>
  <%end%>
</div>

