<%# @user.build_user_detail %>
<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, :autofocus => true %>
  </div><br/>
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div><br />
  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div><br />
  

  <%= f.fields_for :user_detail do |detail| %>
    <div class="field">
      <%= detail.label :first_name %>
      <%= detail.text_field :first_name %>
    </div><br />

    <div class="field">
      <%= detail.label :last_name %>
      <%= detail.text_field :last_name %>
    </div><br />

    <div>
      <%= detail.label :age %>
      <%= detail.text_field :age %>
    </div></br>

    <div>
      <%= detail.label :sex %>
      <%= detail.select :sex, options_for_select([["Select One", ""],"Male", "Female"])%>
    </div></br>

    <div>
      <%= detail.label :phone %>
      <%= detail.text_field :phone %>
    </div></br>

    <div class="actions">
      <%= f.submit %>
    </div>
  <%end%>
  
<% end %>
