<% if flash[:error] %>
  <div class="alert alert-success" id="test">
    <%=flash[:notice]%><% flash[:notice] = nil %>
  </div>
<% elsif notice %> 
   <div class="alert alert-success" id="test">
    <%= notice%><% flash[:notice] = nil %>
  </div>
<% end %>

<%= form_tag share_vehicles_with_users_path(:class => "form-cover") do %>
<%=hidden_field_tag 'vehicle_id', @vehicle.first.id %>
<%=hidden_field_tag 'shared_by', current_user.id%>
<h2>Share <%="#{@vehicle.first.vehicle_type}-#{@vehicle.first.v_identifier}"%> with users</h2>
<%=link_to 'Back',vehicles_path%>
<div class="well well-sm">
  <div class="well well-sm">
    <table class="table">
      <tr>
        <th>User</th>
        <th>Age</th>
        <th>Sex</th>
        <th>Select</th>
      </tr>

      <% @users.each do |user| %>  
        <tr>
          <% if !user.admin? && user.id != current_user.id%>
            <td><%= link_to "#{user.user_detail.first_name } #{user.user_detail.last_name}", user%></td>
            <td><%= user.user_detail.age %></td>
            <td><%= user.user_detail.sex %></td>
            <td><%=check_box_tag("check#{user.id}", value = "#{user.id}", checked = false, 
            options = {})%>
            </td><br/> 
          <% end %>
        </tr>
      <% end %>
    </table>
    </div>
  <%= submit_tag "Share",:class => "pull-right btn btn-warning btn-lg active", 
  :role =>"button"%><br />    
</div>    
<% end %>