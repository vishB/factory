<!DOCTYPE html>
<html>
	<head>
	  <title>Factory</title>
	  <%= stylesheet_link_tag "application", :media => "all" %>
	  <%= javascript_include_tag "application" %>
	  <%= csrf_meta_tags %>
	</head>

    <div class="page-header container">
      <center>
        <h1><%= link_to 'Space Vehicle Factory', root_path %></h1>
      </center>
  	    <% if user_signed_in? %>
  	      <% if current_user.admin? %>
	        <p class = "pull-right">Logged in as Admin | <%= link_to 'Logout', destroy_user_session_path, method: :delete%></p>
	      <% else %>  
	        <p class = "pull-right">Logged in as <%=current_user.user_detail.first_name%> | <%= link_to 'Logout', destroy_user_session_path, method: :delete%></p>
		  <% end %>  
		<% end %>  
	</div>

	<body style="height:800px;">
	  <div class="container">
		  <%= yield %>
		  <div style="margin-left: auto;margin-right: auto;padding: 1px 20px;text-align: center;">
		  	<div>
		  		<% if user_signed_in?%>
			  		<p><%= link_to 'Add new users', new_user_path %> or <%= link_to 'Login as another user',destroy_user_session_path, method: :delete %></p> 
					<% else %>
						<p><%= link_to 'Add new users', new_user_path %> or <%= link_to 'Login as another user',new_user_session_path %></p> 
					<% end %>
  		  </div>
  	  </div>
	</body>
</html>


