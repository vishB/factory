<section>
	<div class="login-cover">
		<div class="row">
			<div class="center span4 wrapper">
				<legend> Sign in </legend>

				<%- flash.each do |name, msg| -%>
       		<% if msg == 'Invalid email or password.'%>
		        <div class="alert alert-error center-text" id="error">
		          <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
		        </div>
		      <% end %>
		    <% end %>    

				<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
						<%= f.email_field :email, :autofocus => true, :placeholder => "Email",:class => "span4" %>
						<%= f.password_field :password, :placeholder => "Password",:class => "span4" %>
				  <% if devise_mapping.rememberable? -%>
				    <label class="checkbox">
				    	<%= f.check_box :remember_me %> <%= f.label :remember_me %>
				    </label>
				  <% end -%><br/>
					<%= f.submit "Sign in",:class => "btn btn-primary btn-block btn-medium", :role=>"button" %>
					<div style="margin-top:2px;">
						<%= render "devise/shared/links" %>
					</div>
				<% end %>
				<hr class="bs-docs-separator">
					<p class="center-text"><%= link_to 'Add new users', new_user_path, :class => "btn btn-primary btn-small", :role=>"button" %></p> 
		</div>
	</div>
</section>

